<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


   <LinearLayout
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="689dp"
        android:background="#1877F2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:clickable="true"
                android:src="@drawable/baseline_arrow_back_24">

            </ImageView>

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:src="@drawable/car2"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7dp"
                    android:text="Showrob"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:text="Active 8 minutes a..."
                    android:textSize="10dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="32dp"
                android:clickable="true"
                android:src="@drawable/baseline_call_24">

            </ImageView>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="32dp"
                android:clickable="true"
                android:src="@drawable/baseline_videocam_24">

            </ImageView>


            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="32dp"
                android:clickable="true"
                android:src="@drawable/baseline_error_24">

            </ImageView>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1877F2"
        android:orientation="horizontal">

        <!-- Plus Icon -->
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="Add"
            android:src="@drawable/plus" />

        <!-- Camera Icon -->
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:contentDescription="Camera"
            android:src="@drawable/camara" />

        <!-- Gallery Icon -->
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:contentDescription="Gallery"
            android:src="@drawable/baseline_image_24" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:contentDescription="Gallery"
            android:src="@drawable/baseline_mic_24" />

        <!-- Message Input -->
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/inpu_bacground"
            android:hint="Message"
            android:inputType="textMultiLine"
            android:padding="8dp" />

        <!-- Emoji Icon -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Emoji"
            android:src="@drawable/baseline_send_24" />

    </LinearLayout>


</LinearLayout>